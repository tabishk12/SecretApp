
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Secrets</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            padding-top: 20px;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        .card {
            border: none;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            min-height: 200px;
            max-height: 200px;
            width: 100%;
            overflow: hidden;
        }

        .card:hover {
            box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #343a40;
        }

        .card-text {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: blue;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .image {
            height: 7rem;
            width: 7rem;
            border-radius: 50%;
            margin: 0 auto;
        }

        .profile-div {
            text-align: center;
            background-color: #fff;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            padding: 20px;
            margin: 0 auto;
        }

        .profile .image {
            margin-top: 0;
            width: 7rem;
            height: 7rem;
            border-radius: 50%;
            border: 2px solid #4c4b4b;
        }

        .detail h3 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
        }

        .detail .username {
            color: purple;
        }

               /* Media queries for different screen sizes */
        @media (max-width: 576px) {
            .profile-div {
                text-align: center;
            }

            .profile .image {
                margin: 0 auto;
            }
        }

        @media (min-width: 577px) {
            .profile-div {
                display: flex;
                align-items: center;
                text-align: left;
            }

            .profile {
                flex: 0 0 auto;
                margin-right: 20px;
            }

            .profile .image {
                margin: 0;
            }

            .detail {
                flex: 1;
            }
        }
    </style>
</head>

<body>
    <%- include('header.ejs') %>
    <div class="profile-div">
        <div class="profile">
            <img src="https://as2.ftcdn.net/v2/jpg/01/01/04/97/1000_F_101049774_sEoWobtUla8ygcWQdczPHm1sToF4YDqG.jpg" alt="" class="image">

        </div>
        <div class="detail">
            <a href="/details" style="text-decoration: none;">✏️ Edit</a>
            
            <h3><span class="username"><%= user.fullName ? user.fullName.charAt(0).toUpperCase() + user.fullName.slice(1) : user.name.charAt(0).toUpperCase() + user.name.slice(1) %></span></h3>
            <p> @<%=currentUser.name %></p>
            <p>Date Of Birth : <%= user.dob ? user.dob.toDateString() : '' %></p>
            <p><%= user.bio || '' %></p>
      
            </div>
    </div>

    <br>
    <div class="container">
        <div class="row">
            <% if (user.secrets.length > 0) { %>
                <div class="row">
                    <% user.secrets.forEach(secret => { %>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-2" onclick="fetchPost('<%= user._id %>', '<%= secret._id %>')">
                            <div class="card my-3">

                                <div class="card-header" style="position: relative;">
                                  
                                    <h5 class="card-title">
                                        <% if (secret.title) { %>
                                            <%= secret.title.charAt(0).toUpperCase() + secret.title.slice(1) %>
                                        <% } %>
                                    </h5>
                                    <!-- Delete button form -->
                                    <form action="/delete-secret/<%= secret._id %>" method="post" class="position-absolute top-0 end-0 m-2">
                                        <input type="hidden" name="_method" value="DELETE">

                                        <button type="submit" class="btn btn-danger btn-sm p-1">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                                class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M1.5 2.5a.5.5 0 0 1 1 0V13a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2.5a.5.5 0 0 1 1 0V13a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V2.5zM2 1.5V0h1v1.5a.5.5 0 0 0 1 0V0h6v1.5a.5.5 0 0 0 1 0V0h1v1.5a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3z" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><%= secret.secret %></p>
                                
                                </div>
                            </div>
                        </div>
                    <% }); %>
            <% } else { %>
                <p>No secrets found. <a href="/compose">Compose </a></p>
            <% } %>
        </div>
    </div>
    <a href="/" class="btn btn-primary btn-sm mx-3 p-1">Back to Home</a>
</body>
